<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main.service_information">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="Empresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView" android:paddingLeft="150dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/empresa"/>
        <TextView
                android:text="Cidade de destino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView3" android:paddingLeft="150dp"/>
        tools:ignore="HardcodedText" <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/destino"/>
        <TextView
                android:text="Descrição"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView5" android:paddingLeft="150dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/descricao"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>